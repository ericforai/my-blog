---
import PageLayout from './PageLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    tags?: string[];
    author?: string;
    cover?: string;
  };
}

const { frontmatter } = Astro.props;
const { title, description, pubDate, tags = [], author = 'Eric' } = frontmatter;

// 格式化日期
const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<PageLayout title={title} description={description}>
  <article class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- 文章头部 -->
    <header class="mb-12">
      <div class="mb-4 flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
        <time datetime={pubDate}>{formatDate(pubDate)}</time>
        <span>·</span>
        <span>{author}</span>
      </div>
      
      <h1 class="text-page-title mb-6">{title}</h1>
      
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- 文章内容 -->
    <div class="prose prose-lg prose-slate max-w-none dark:prose-invert prose-headings:font-bold prose-a:text-primary prose-code:text-accent prose-pre:bg-slate-900">
      <slot />
    </div>

    <!-- 文章底部 -->
    <footer class="mt-16 border-t border-gray-200 pt-8 dark:border-gray-800">
      <div class="flex items-center justify-between">
        <a
          href="/blog"
          class="text-primary hover:underline"
        >
          ← 返回博客列表
        </a>
        
        <div class="flex gap-4">
          <button
            onclick="navigator.share?.({title: document.title, url: window.location.href}) || alert('分享功能不可用')"
            class="text-gray-600 hover:text-primary dark:text-gray-400"
          >
            分享文章
          </button>
        </div>
      </div>
    </footer>

    <!-- Giscus 评论系统 -->
    <div class="mt-16">
      <h3 class="text-2xl font-bold mb-6">💬 评论讨论</h3>
      <div 
        class="giscus"
        data-repo="yourusername/your-repo"
        data-repo-id="YOUR_REPO_ID"
        data-category="General"
        data-category-id="YOUR_CATEGORY_ID"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="preferred_color_scheme"
        data-lang="zh-CN"
        data-loading="lazy"
        crossorigin="anonymous"
      >
        <p class="text-gray-500 text-sm">
          评论系统加载中...
          <br />
          <small class="text-xs">
            💡 提示：需要配置 Giscus，请参考 
            <a href="https://giscus.app/zh-CN" target="_blank" class="text-primary hover:underline">
              giscus.app
            </a>
          </small>
        </p>
      </div>
    </div>
  </article>
</PageLayout>

<script is:inline>
  // 动态加载 Giscus 评论系统
  const script = document.createElement('script');
  script.src = 'https://giscus.app/client.js';
  script.setAttribute('data-repo', 'yourusername/your-repo');
  script.setAttribute('data-repo-id', 'YOUR_REPO_ID');
  script.setAttribute('data-category', 'General');
  script.setAttribute('data-category-id', 'YOUR_CATEGORY_ID');
  script.setAttribute('data-mapping', 'pathname');
  script.setAttribute('data-strict', '0');
  script.setAttribute('data-reactions-enabled', '1');
  script.setAttribute('data-emit-metadata', '0');
  script.setAttribute('data-input-position', 'top');
  script.setAttribute('data-theme', 'preferred_color_scheme');
  script.setAttribute('data-lang', 'zh-CN');
  script.setAttribute('crossorigin', 'anonymous');
  script.async = true;
  
  const giscusContainer = document.querySelector('.giscus');
  if (giscusContainer) {
    // 清空加载提示
    giscusContainer.innerHTML = '';
    giscusContainer.appendChild(script);
  }
</script>

