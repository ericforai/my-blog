---
import PageLayout from './PageLayout.astro';
import { getLocaleFromPath } from '~/i18n/ui.ts';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    tags?: string[];
    author?: string;
    cover?: string;
  };
}

const { frontmatter } = Astro.props;
const { title, description, pubDate, tags = [], author = 'Eric' } = frontmatter;

// 获取当前语言
const currentLocale = getLocaleFromPath(Astro.url.pathname);

// 格式化日期
const formatDate = (date: string) => {
  const locale = currentLocale === 'zh' ? 'zh-CN' : 'en-US';
  return new Date(date).toLocaleDateString(locale, {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// 翻译文本
const translations = {
  backToBlog: currentLocale === 'zh' ? '← 返回博客列表' : '← Back to Blog',
  shareArticle: currentLocale === 'zh' ? '分享文章' : 'Share Article',
  shareNotAvailable: currentLocale === 'zh' ? '分享功能不可用' : 'Share feature not available'
};
---

<PageLayout title={title} description={description}>
  <article class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- 文章头部 -->
    <header class="mb-12">
      <div class="mb-4 flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
        <time datetime={pubDate}>{formatDate(pubDate)}</time>
        <span>·</span>
        <span>{author}</span>
      </div>
      
      <h1 class="text-page-title mb-6">{title}</h1>
      
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- 文章内容 -->
    <div class="prose prose-lg prose-slate max-w-none dark:prose-invert prose-headings:font-bold prose-a:text-primary prose-code:text-accent prose-pre:bg-slate-900">
      <slot />
    </div>

    <!-- 文章底部 -->
    <footer class="mt-16 border-t border-gray-200 pt-8 dark:border-gray-800">
      <div class="flex items-center justify-between">
        <a
          href={currentLocale === 'zh' ? '/zh/blog' : '/blog'}
          class="text-primary hover:underline"
        >
          {translations.backToBlog}
        </a>
        
        <div class="flex gap-4">
          <button
            onclick={`navigator.share?.({title: document.title, url: window.location.href}) || alert('${translations.shareNotAvailable}')`}
            class="text-gray-600 hover:text-primary dark:text-gray-400"
          >
            {translations.shareArticle}
          </button>
        </div>
      </div>
    </footer>

  </article>
</PageLayout>


