---
import '~/styles/base.css';
import { SITE } from '~/config.mjs';
import Analytics from '~/components/Analytics.astro';
import SEO from '~/components/SEO.astro';
import { getLocaleFromPath } from '~/i18n/ui.ts';

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  author?: string;
  image?: string;
  url?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
  noindex?: boolean;
}

const {
  title,
  description,
  keywords,
  author,
  image,
  url,
  type,
  publishedTime,
  modifiedTime,
  tags,
  noindex,
} = Astro.props;

// Get current locale from URL
const currentLocale = getLocaleFromPath(Astro.url.pathname);
const locale = currentLocale === 'zh' ? 'zh-CN' : 'en';
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO 元数据 -->
    <SEO
      title={title}
      description={description}
      keywords={keywords}
      author={author}
      image={image}
      url={url}
      type={type}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      tags={tags}
      noindex={noindex}
    />
    
    <!-- Google Analytics 4 -->
    <Analytics />
  </head>
  <body>
    <slot />
  </body>
</html>

