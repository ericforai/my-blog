---
import { generateSVGBanner, type BlogPost, type BannerImageConfig } from '~/utils/bannerGenerator';
import { generateAIImage } from '~/utils/aiImageGenerator';

interface Props {
  post: BlogPost;
  config?: BannerImageConfig & {
    useAIImage?: boolean;
  };
  className?: string;
}

const { post, config = {
  width: 1200,
  height: 630,
  style: 'modern',
  colorScheme: 'gradient',
  useAIImage: false
}, className = '' } = Astro.props;

// 检查是否启用 AI 图片生成
const useAIImage = config.useAIImage && import.meta.env.OPENAI_API_KEY;

let bannerContent: string;
let isAIGenerated = false;

if (useAIImage) {
  try {
    // 生成 AI 图片
    const aiImageUrl = await generateAIImage(post, {
      size: '1024x1024',
      quality: 'standard',
      style: 'vivid'
    });
    
    // 使用 AI 生成的图片
    bannerContent = `
      <div style="width: 100%; height: 100%; background-image: url('${aiImageUrl}'); background-size: cover; background-position: center; background-repeat: no-repeat; border-radius: 8px;"></div>
    `;
    isAIGenerated = true;
  } catch (error) {
    console.warn('AI image generation failed, using mock images for demo:', error);
    
    // 使用模拟的 AI 图片作为演示 - 使用简单的渐变背景
    const mockImages = {
      // 根据文章slug精确匹配 - 使用渐变背景
      'ai-marketing-revolution': 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)', // 营销革命 - 紫蓝渐变
      'ai-tools-2025': 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)', // AI工具 - 粉红渐变
      'ai-future-decade-keywords': 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)', // 未来关键词 - 蓝青渐变
      'prompt-engineering': 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)', // Prompt工程 - 绿青渐变
      'ai-model-ranking-2025': 'linear-gradient(135deg, #fa709a 0%, #fee140 100%)', // AI模型排名 - 粉黄渐变
      'ai-copywriting-prompts': 'linear-gradient(135deg, #a8edea 0%, #fed6e3 100%)', // AI文案 - 青粉渐变
      
      // 分类备用图片
      'AI Marketing': 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
      'AI Tools': 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)',
      'AI Trends': 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)',
      'Tech Tutorial': 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)',
      
      // 中文分类
      'AI 营销': 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
      'AI 工具': 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)',
      'AI 趋势': 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)',
      '技术实践': 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)'
    };
    
    // 优先使用文章slug匹配，然后使用分类匹配
    const mockImageUrl = mockImages[post.slug] || mockImages[post.category] || mockImages['AI Marketing'];
    
    bannerContent = `
      <div style="width: 100%; height: 100%; background: ${mockImageUrl}; border-radius: 8px; position: relative; display: flex; align-items: center; justify-content: center;">
        <div style="position: absolute; top: 10px; right: 10px; background: rgba(0,0,0,0.8); color: white; padding: 6px 12px; border-radius: 6px; font-size: 12px; font-weight: 500;">
          🤖 AI Demo
        </div>
        <div style="color: white; text-align: center; font-size: 24px; font-weight: bold; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
          ${post.category}
        </div>
      </div>
    `;
    isAIGenerated = true;
  }
} else {
  bannerContent = generateSVGBanner(post, config);
  isAIGenerated = false;
}
---

<div class={`banner-container ${className}`}>
  <div class="aspect-video rounded-lg overflow-hidden">
    <div class="banner-svg" set:html={bannerContent}></div>
  </div>
</div>

<style>
  .banner-container {
    width: 100%;
    height: 100%;
  }
  
  .banner-svg {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .banner-svg svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .banner-svg svg text {
      font-size: 0.8em;
    }
  }
</style>
