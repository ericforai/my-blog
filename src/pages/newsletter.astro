---
import PageLayout from '~/layouts/PageLayout.astro';
import { SITE } from '~/config.mjs';
import { getTranslation } from '~/i18n/ui.ts';

// Get current locale
const currentLocale = 'en';

// SEO 优化
const seoTitle = "Subscribe to AI Weekly - AI Kids Newsletter | Get Latest AI Insights";
const seoDescription = "Subscribe to AI Kids weekly newsletter, get the most noteworthy AI trends, tool recommendations and in-depth articles every week. Join 5000+ AI practitioners learning community.";
const seoKeywords = "AI weekly subscription,AI news,AI tool recommendations,AI learning community,Newsletter subscription,AI trends";
---

<PageLayout 
  title={seoTitle} 
  description={seoDescription}
  keywords={seoKeywords}
  url="/newsletter"
  type="website"
>
  <div class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- 页面标题 -->
    <div class="text-center mb-12">
      <h1 class="text-page-title mb-6">{getTranslation(currentLocale, 'newsletter.page.title')}</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        {getTranslation(currentLocale, 'newsletter.page.description')}
      </p>
    </div>

    <!-- Newsletter 订阅组件 -->
    <div class="mb-16">
      <section class="bg-gradient-to-br from-primary/10 to-accent/10 py-12 rounded-2xl">
        <div class="mx-auto max-w-2xl px-6 text-center">
          <div class="mb-4">
            <span class="text-4xl">📬</span>
          </div>
          <h3 class="text-2xl font-bold mb-3">订阅 AI 周刊</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            每周精选最值得关注的 AI 动态、工具推荐与深度文章<br />
            加入 <strong>5000+</strong> AI 从业者的学习社群
          </p>
          
          <!-- 订阅表单 -->
          <form 
            class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto"
            id="newsletter-form"
          >
            <input
              type="email"
              name="email"
              placeholder="输入你的邮箱"
              required
              class="flex-1 rounded-lg border border-gray-300 px-4 py-3 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white"
              id="email-input"
            />
            <button
              type="submit"
              class="rounded-lg bg-primary px-6 py-3 font-semibold text-white transition-colors hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary/50 disabled:opacity-50 disabled:cursor-not-allowed"
              id="submit-btn"
            >
              <span id="btn-text">立即订阅</span>
              <span id="btn-loading" class="hidden">订阅中...</span>
            </button>
          </form>
          
          <!-- 状态提示 -->
          <div id="status-message" class="mt-4 hidden"></div>
          
          <p class="mt-4 text-xs text-gray-500 dark:text-gray-500">
            🔒 我们尊重您的隐私，随时可退订
          </p>

          <!-- 订阅福利 -->
          <div class="mt-8 grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
            <div class="flex items-center justify-center gap-2">
              <span class="text-primary">✓</span>
              <span>AI 工具清单</span>
            </div>
            <div class="flex items-center justify-center gap-2">
              <span class="text-primary">✓</span>
              <span>Prompt 模板库</span>
            </div>
            <div class="flex items-center justify-center gap-2">
              <span class="text-primary">✓</span>
              <span>独家深度文章</span>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- 订阅价值说明 -->
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <!-- 为什么订阅 -->
      <div class="bg-white dark:bg-gray-800 p-8 rounded-xl border border-gray-200 dark:border-gray-700">
        <h3 class="text-2xl font-bold mb-4 text-primary">🤔 为什么订阅？</h3>
        <ul class="space-y-3 text-gray-600 dark:text-gray-400">
          <li class="flex items-start gap-3">
            <span class="text-primary mt-1">•</span>
            <span>AI 领域变化太快，我们帮你筛选最有价值的信息</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-primary mt-1">•</span>
            <span>每周深度分析一个 AI 趋势，不只是新闻搬运</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-primary mt-1">•</span>
            <span>实战工具推荐，每个都经过我们团队测试</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-primary mt-1">•</span>
            <span>独家 Prompt 模板，提升你的 AI 使用效率</span>
          </li>
        </ul>
      </div>

      <!-- 订阅内容 -->
      <div class="bg-white dark:bg-gray-800 p-8 rounded-xl border border-gray-200 dark:border-gray-700">
        <h3 class="text-2xl font-bold mb-4 text-accent">📋 订阅内容</h3>
        <ul class="space-y-3 text-gray-600 dark:text-gray-400">
          <li class="flex items-start gap-3">
            <span class="text-accent mt-1">•</span>
            <span><strong>AI 工具周报</strong>：新工具评测与使用技巧</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-accent mt-1">•</span>
            <span><strong>趋势深度分析</strong>：解读 AI 行业重要变化</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-accent mt-1">•</span>
            <span><strong>Prompt 模板库</strong>：实用模板直接套用</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-accent mt-1">•</span>
            <span><strong>学习资源推荐</strong>：精选课程与学习路径</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- 订阅者反馈 -->
    <div class="bg-gradient-to-r from-primary/5 to-accent/5 p-8 rounded-xl">
      <h3 class="text-2xl font-bold mb-6 text-center">💬 订阅者说</h3>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg">
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            "每周的 AI 工具推荐都很实用，特别是 Prompt 模板，直接提升了我的工作效率。"
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center">
              <span class="text-primary font-bold">张</span>
            </div>
            <div>
              <p class="font-semibold">张同学</p>
              <p class="text-sm text-gray-500">产品经理</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg">
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            "AI 小孩的深度分析帮我理解了很多技术趋势，不再是简单的信息堆砌。"
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-accent/20 rounded-full flex items-center justify-center">
              <span class="text-accent font-bold">李</span>
            </div>
            <div>
              <p class="font-semibold">李同学</p>
              <p class="text-sm text-gray-500">AI 工程师</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 其他联系方式 -->
    <div class="mt-16 text-center">
      <h3 class="text-xl font-bold mb-4">📱 其他联系方式</h3>
      <div class="flex justify-center gap-6">
        <a href="/blog" class="text-primary hover:text-primary/80 transition-colors">
          📝 阅读博客
        </a>
        <a href="/about" class="text-primary hover:text-primary/80 transition-colors">
          👥 关于我们
        </a>
        <a href="mailto:hello@aixiaohai.com" class="text-primary hover:text-primary/80 transition-colors">
          📧 联系我们
        </a>
      </div>
    </div>
  </div>
</PageLayout>

<script>
  // Newsletter 表单提交处理
  const form = document.getElementById('newsletter-form');
  const emailInput = document.getElementById('email-input') as HTMLInputElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text');
  const btnLoading = document.getElementById('btn-loading');
  const statusMessage = document.getElementById('status-message');
  
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const email = emailInput.value.trim();
      
      // 验证邮箱格式
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        showStatus('请输入有效的邮箱地址', 'error');
        return;
      }
      
      // 设置加载状态
      setLoadingState(true);
      
      try {
        const response = await fetch('/api/subscribe', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showStatus(result.message, 'success');
          form.reset();
          
          // Google Analytics 事件追踪
          if (typeof gtag !== 'undefined') {
            gtag('event', 'newsletter_signup', {
              'event_category': 'engagement',
              'event_label': 'newsletter_page',
              'value': 1
            });
          }
          
          // 额外的成功处理
          setTimeout(() => {
            showStatus('🎉 欢迎加入 AI 小孩大家庭！', 'success');
          }, 2000);
          
        } else {
          showStatus(result.message, 'error');
        }
        
      } catch (error) {
        console.error('Newsletter subscription error:', error);
        showStatus('订阅失败，请检查网络连接后重试', 'error');
      } finally {
        setLoadingState(false);
      }
    });
  }
  
  // 设置加载状态
  function setLoadingState(loading: boolean) {
    if (loading) {
      submitBtn.disabled = true;
      btnText?.classList.add('hidden');
      btnLoading?.classList.remove('hidden');
    } else {
      submitBtn.disabled = false;
      btnText?.classList.remove('hidden');
      btnLoading?.classList.add('hidden');
    }
  }
  
  // 显示状态消息
  function showStatus(message: string, type: 'success' | 'error') {
    if (!statusMessage) return;
    
    statusMessage.textContent = message;
    statusMessage.className = `mt-4 p-3 rounded-lg text-sm font-medium ${
      type === 'success' 
        ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' 
        : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
    }`;
    statusMessage.classList.remove('hidden');
    
    // 3秒后自动隐藏成功消息
    if (type === 'success') {
      setTimeout(() => {
        statusMessage.classList.add('hidden');
      }, 5000);
    }
  }
  
  // 邮箱输入实时验证
  if (emailInput) {
    emailInput.addEventListener('input', () => {
      const email = emailInput.value.trim();
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      
      if (email && !emailRegex.test(email)) {
        emailInput.classList.add('border-red-500');
        emailInput.classList.remove('border-gray-300', 'dark:border-gray-700');
      } else {
        emailInput.classList.remove('border-red-500');
        emailInput.classList.add('border-gray-300', 'dark:border-gray-700');
      }
    });
  }
</script>

<style>
  /* 添加动画效果 */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section {
    animation: fadeInUp 0.6s ease-out;
  }
</style>
