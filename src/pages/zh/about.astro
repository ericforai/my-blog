---
import PageLayout from '~/layouts/PageLayout.astro';
import { SITE } from '~/config.mjs';
import { getTranslation } from '~/i18n/ui.ts';

// Get current locale
const currentLocale = 'zh';

// SEO 优化
const seoTitle = "关于我们 - AI小孩品牌故事 | AI学习社区";
const seoDescription = "了解AI小孩的品牌故事、使命愿景和核心理念。我们致力于成为最具温度的AI学习者社区，让每个普通人都能在AI时代重启自己的第二次童年。";
const seoKeywords = "关于AI小孩,AI学习社区,品牌故事,AI学习者,人工智能教育,AI学习理念";
---

<PageLayout 
  title={seoTitle} 
  description={seoDescription}
  keywords={seoKeywords}
  url="/zh/about"
  type="website"
>
  <div class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- 品牌定位 -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h1 class="text-page-title mb-6">😊 AI小孩</h1>
        <blockquote class="text-2xl font-medium text-gray-700 dark:text-gray-300 italic border-l-4 border-primary pl-6 py-4 bg-primary/5 rounded-r-lg">
          {getTranslation(currentLocale, 'brand.tagline')}
        </blockquote>
      </div>
      
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
          <strong>核心理念：</strong> {getTranslation(currentLocale, 'brand.description')}
          <br />
          AI不是威胁，而是成长的伙伴。
        </p>
      </div>
    </section>

    <!-- 品牌故事 -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">📖 我们的故事</h2>
      <div class="bg-gradient-to-r from-primary/5 to-accent/5 p-8 rounded-xl">
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <p>
            在2024年的春天，当我们第一次真正与AI对话时，那种感觉就像重新回到了童年——充满了好奇、惊喜，也带着一丝不安。
          </p>
          <p>
            我们意识到，在这个AI时代，每个人都需要重新学习如何"提问、探索与创造"。于是，AI小孩诞生了。
          </p>
          <p>
            我们相信，面对AI，我们都是学习者。无论你是技术专家还是普通用户，无论你来自哪个行业，我们都站在同一起跑线上。
          </p>
        </div>
      </div>
    </section>

    <!-- 使命愿景 -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">🎯 使命与愿景</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-gradient-to-br from-primary/10 to-primary/5 p-8 rounded-xl border border-primary/20">
          <h3 class="text-2xl font-bold mb-4 text-primary">{getTranslation(currentLocale, 'home.mission.title')}</h3>
          <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
            {getTranslation(currentLocale, 'home.mission.description')}
          </p>
        </div>

        <div class="bg-gradient-to-br from-accent/10 to-accent/5 p-8 rounded-xl border border-accent/20">
          <h3 class="text-2xl font-bold mb-4 text-accent">{getTranslation(currentLocale, 'home.vision.title')}</h3>
          <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
            {getTranslation(currentLocale, 'home.vision.description')}
          </p>
        </div>
      </div>
    </section>

    <!-- 内容理念 -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">💡 内容理念</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
          <div class="text-4xl mb-4">🔍</div>
          <h3 class="text-xl font-bold mb-3">深度洞察</h3>
          <p class="text-gray-600 dark:text-gray-400">
            不只是新闻搬运，而是深度分析和思考
          </p>
        </div>
        
        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
          <div class="text-4xl mb-4">🛠️</div>
          <h3 class="text-xl font-bold mb-3">实用工具</h3>
          <p class="text-gray-600 dark:text-gray-400">
            每个推荐都经过我们团队的实际测试
          </p>
        </div>
        
        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
          <div class="text-4xl mb-4">🤝</div>
          <h3 class="text-xl font-bold mb-3">温暖社区</h3>
          <p class="text-gray-600 dark:text-gray-400">
            让每个人都能在AI时代找到归属感
          </p>
        </div>
      </div>
    </section>

    <!-- 团队介绍 -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">👥 我们的团队</h2>
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700 p-8 rounded-xl">
        <div class="text-center">
          <div class="w-24 h-24 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">😊</span>
          </div>
          <h3 class="text-xl font-bold mb-2">AI小孩团队</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            一群热爱AI、相信学习的普通人
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-500">
            我们来自不同的背景，但都相信AI时代需要更多的"学习者心态"。
            我们不是专家，而是和你一样的探索者。
          </p>
        </div>
      </div>
    </section>

    <!-- 联系方式 -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">📞 联系我们</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold mb-4">📧 邮箱联系</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            有任何问题或建议，欢迎随时联系我们
          </p>
          <a href="mailto:hello@aixiaohai.com" class="text-primary hover:text-primary/80 font-medium">
            hello@aixiaohai.com
          </a>
        </div>
        
        <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold mb-4">🌐 社交媒体</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            关注我们的最新动态
          </p>
          <div class="space-y-2">
            <a href="https://twitter.com/aixiaohai" class="block text-primary hover:text-primary/80">
              Twitter: @aixiaohai
            </a>
            <a href="https://github.com/ericforai" class="block text-primary hover:text-primary/80">
              GitHub: ericforai
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- 加入我们 -->
    <section class="text-center">
      <div class="bg-gradient-to-r from-primary/10 to-accent/10 p-8 rounded-xl">
        <h2 class="text-2xl font-bold mb-4">🚀 加入AI小孩</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-6">
          让我们一起在AI时代重新学习，重新成长
        </p>
        <div class="flex justify-center gap-4">
          <a href="/zh/blog" class="btn btn-primary">
            阅读我们的文章
          </a>
        </div>
      </div>
    </section>
  </div>
</PageLayout>
