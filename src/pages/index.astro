---
import PageLayout from '~/layouts/PageLayout.astro';
import { SITE } from '~/config.mjs';
import { getTranslation } from '~/i18n/ui.ts';

// Get current locale
const currentLocale = 'en';

// SEO 优化
const seoTitle = "AI Kids - Facing AI, We Are All Learners | AI Learning Community";
const seoDescription = "AI Kids is a warm community focused on AI learning, providing cutting-edge insights, practical tools, and deep thinking. Making AI a learning partner for everyone, restarting your second childhood.";
const seoKeywords = "AI learning,artificial intelligence learning,AI tools,AI community,machine learning,deep learning,ChatGPT,AI marketing,Prompt Engineering";
---

<PageLayout 
  title={seoTitle} 
  description={seoDescription}
  keywords={seoKeywords}
  url="/"
  type="website"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary/10 to-accent/10 py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-page-title mb-6">
          {getTranslation(currentLocale, 'home.hero.title')}
        </h1>
        <blockquote class="text-2xl font-medium text-gray-700 dark:text-gray-300 italic mb-8">
          {getTranslation(currentLocale, 'home.hero.subtitle')}
        </blockquote>
        <p class="mx-auto max-w-3xl text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
          {getTranslation(currentLocale, 'home.hero.description')}
        </p>
        <div class="mt-10 flex justify-center gap-4">
          <a href="/blog" class="btn btn-primary">
            {getTranslation(currentLocale, 'home.hero.start_learning')}
          </a>
          <a href="/about" class="btn btn-ghost">
            {getTranslation(currentLocale, 'home.hero.learn_more')}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- 品牌理念 -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">{getTranslation(currentLocale, 'home.philosophy.title')}</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          {getTranslation(currentLocale, 'home.philosophy.description')}
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Mission -->
        <div class="bg-gradient-to-br from-primary/10 to-primary/5 p-8 rounded-xl border border-primary/20">
          <h3 class="text-2xl font-bold mb-4 text-primary">{getTranslation(currentLocale, 'home.mission.title')}</h3>
          <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
            {getTranslation(currentLocale, 'home.mission.description')}
          </p>
        </div>

        <!-- Vision -->
        <div class="bg-gradient-to-br from-accent/10 to-accent/5 p-8 rounded-xl border border-accent/20">
          <h3 class="text-2xl font-bold mb-4 text-accent">{getTranslation(currentLocale, 'home.vision.title')}</h3>
          <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
            {getTranslation(currentLocale, 'home.vision.description')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Category Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-8 text-center">{getTranslation(currentLocale, 'blog.categories')}</h2>
      <div class="grid gap-6 md:grid-cols-3 lg:grid-cols-6">
        <a href="/category/ai-trends" class="group flex flex-col items-center p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-primary hover:shadow-lg transition-all">
          <span class="text-4xl mb-3">🔮</span>
          <h3 class="text-base font-semibold text-center group-hover:text-primary">AI 趋势</h3>
          <p class="text-xs text-gray-500 mt-1">1 篇</p>
        </a>

        <a href="/category/ai-marketing" class="group flex flex-col items-center p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-primary hover:shadow-lg transition-all">
          <span class="text-4xl mb-3">📈</span>
          <h3 class="text-base font-semibold text-center group-hover:text-primary">AI 营销</h3>
          <p class="text-xs text-gray-500 mt-1">1 篇</p>
        </a>

        <a href="/category/ai-tools" class="group flex flex-col items-center p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-primary hover:shadow-lg transition-all">
          <span class="text-4xl mb-3">🛠️</span>
          <h3 class="text-base font-semibold text-center group-hover:text-primary">AI 工具</h3>
          <p class="text-xs text-gray-500 mt-1">1 篇</p>
        </a>

        <a href="/category/tech-tutorial" class="group flex flex-col items-center p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-primary hover:shadow-lg transition-all">
          <span class="text-4xl mb-3">💻</span>
          <h3 class="text-base font-semibold text-center group-hover:text-primary">技术实践</h3>
          <p class="text-xs text-gray-500 mt-1">1 篇</p>
        </a>

        <a href="/category/insights" class="group flex flex-col items-center p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-primary hover:shadow-lg transition-all">
          <span class="text-4xl mb-3">💡</span>
          <h3 class="text-base font-semibold text-center group-hover:text-primary">思考洞察</h3>
          <p class="text-xs text-gray-500 mt-1">即将上线</p>
        </a>

        <a href="/category/resources" class="group flex flex-col items-center p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-primary hover:shadow-lg transition-all">
          <span class="text-4xl mb-3">📚</span>
          <h3 class="text-base font-semibold text-center group-hover:text-primary">资源合集</h3>
          <p class="text-xs text-gray-500 mt-1">即将上线</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Posts Section -->
  <section class="py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-bold">{getTranslation(currentLocale, 'blog.latest_posts')}</h2>
        <a href="/blog" class="text-primary hover:underline">
          View All →
        </a>
      </div>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
        <article class="group flex flex-col overflow-hidden rounded-lg border border-gray-200 transition-all hover:shadow-lg dark:border-gray-800">
          <div class="aspect-video bg-gradient-to-br from-primary/20 to-accent/20">
            <div class="flex h-full items-center justify-center">
              <span class="text-3xl">🤖</span>
            </div>
          </div>
          <div class="flex flex-1 flex-col p-4">
            <span class="text-xs text-primary mb-2">AI 营销</span>
            <h3 class="mb-2 text-base font-bold group-hover:text-primary line-clamp-2">
              <a href="/blog/ai-marketing-revolution">AI 重塑营销：从内容生产到精准投放的全链路革命</a>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
              深度解析 AI 如何改变营销的每个环节
            </p>
          </div>
        </article>

        <article class="group flex flex-col overflow-hidden rounded-lg border border-gray-200 transition-all hover:shadow-lg dark:border-gray-800">
          <div class="aspect-video bg-gradient-to-br from-primary/20 to-accent/20">
            <div class="flex h-full items-center justify-center">
              <span class="text-3xl">🤖</span>
            </div>
          </div>
          <div class="flex flex-1 flex-col p-4">
            <span class="text-xs text-primary mb-2">AI 工具</span>
            <h3 class="mb-2 text-base font-bold group-hover:text-primary line-clamp-2">
              <a href="/blog/ai-tools-2025">2025 年必备的 10 个 AI 工具</a>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
              精选 10 个经过实战检验的 AI 工具
            </p>
          </div>
        </article>

        <article class="group flex flex-col overflow-hidden rounded-lg border border-gray-200 transition-all hover:shadow-lg dark:border-gray-800">
          <div class="aspect-video bg-gradient-to-br from-primary/20 to-accent/20">
            <div class="flex h-full items-center justify-center">
              <span class="text-3xl">🤖</span>
            </div>
          </div>
          <div class="flex flex-1 flex-col p-4">
            <span class="text-xs text-primary mb-2">AI 趋势</span>
            <h3 class="mb-2 text-base font-bold group-hover:text-primary line-clamp-2">
              <a href="/blog/ai-future-decade-keywords">AI 未来十年的关键词</a>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
              解读未来十年将主导 AI 发展的 10 个核心关键词
            </p>
          </div>
        </article>

        <article class="group flex flex-col overflow-hidden rounded-lg border border-gray-200 transition-all hover:shadow-lg dark:border-gray-800">
          <div class="aspect-video bg-gradient-to-br from-primary/20 to-accent/20">
            <div class="flex h-full items-center justify-center">
              <span class="text-3xl">🤖</span>
            </div>
          </div>
          <div class="flex flex-1 flex-col p-4">
            <span class="text-xs text-primary mb-2">技术实践</span>
            <h3 class="mb-2 text-base font-bold group-hover:text-primary line-clamp-2">
              <a href="/blog/prompt-engineering">Prompt Engineering：AI 时代的新编程语言</a>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
              掌握与 AI 对话的艺术
            </p>
          </div>
        </article>
      </div>
    </div>
  </section>
</PageLayout>

