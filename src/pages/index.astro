---
import PageLayout from '~/layouts/PageLayout.astro';
import { SITE } from '~/config.mjs';
---

<PageLayout title={SITE.title} description={SITE.description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary/10 to-accent/10 py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-page-title mb-6">
          欢迎来到 {SITE.title}
        </h1>
        <p class="mx-auto max-w-2xl text-xl text-gray-600 dark:text-gray-300">
          {SITE.description}
        </p>
        <div class="mt-10 flex justify-center gap-4">
          <a href="/blog" class="btn btn-primary">
            阅读博客
          </a>
          <a href="/about" class="btn btn-ghost">
            了解更多
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-8 md:grid-cols-3">
        <div class="rounded-lg border border-gray-200 p-6 dark:border-gray-800">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
            <span class="text-2xl">🤖</span>
          </div>
          <h3 class="mb-2 text-xl font-semibold">AI 技术</h3>
          <p class="text-gray-600 dark:text-gray-400">
            深入探索人工智能的最新进展与应用实践
          </p>
        </div>

        <div class="rounded-lg border border-gray-200 p-6 dark:border-gray-800">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-accent/10">
            <span class="text-2xl">📈</span>
          </div>
          <h3 class="mb-2 text-xl font-semibold">营销洞察</h3>
          <p class="text-gray-600 dark:text-gray-400">
            分享数字营销与增长策略的前沿思考
          </p>
        </div>

        <div class="rounded-lg border border-gray-200 p-6 dark:border-gray-800">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
            <span class="text-2xl">💻</span>
          </div>
          <h3 class="mb-2 text-xl font-semibold">技术开发</h3>
          <p class="text-gray-600 dark:text-gray-400">
            记录编程技术与开发经验的点滴积累
          </p>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

